<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_with_border"
    android:gravity="center"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بقي للصلاة القادمة"
        android:layout_marginVertical="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/white"
        >
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center"
            >

        <TextView
            android:id="@+id/hourCounterId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:backgroundTint="#283039"
           android:background="@drawable/rounded_corner"
            />

        <TextView
            android:id="@+id/hourId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hour" 
            android:gravity="center"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="center"
            >
        <TextView
            android:id="@+id/minuteCounterId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:backgroundTint="#283039"
            android:background="@drawable/rounded_corner"
            />

        <TextView
            android:id="@+id/minuteId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hour"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/secondCounterId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:backgroundTint="#283039"
            android:background="@drawable/rounded_corner"
            />

        <TextView
            android:id="@+id/secondId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="second"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>
</LinearLayout>